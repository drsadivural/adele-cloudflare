# ADELE - Environment Variables Template
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
APP_URL=https://adele.yourdomain.com
PORT=3000

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://adele:your_password@postgres:5432/adele
POSTGRES_USER=adele
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=adele

# ===========================================
# REDIS CACHE
# ===========================================
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=your_very_long_random_jwt_secret_at_least_32_characters

# ===========================================
# EMAIL SERVICE (Resend)
# ===========================================
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# AI SERVICES
# ===========================================
# OpenAI
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxx

# Google AI
GOOGLE_AI_API_KEY=xxxxxxxxxxxxxxxxxxxx

# ===========================================
# VOICE SERVICES
# ===========================================
# ElevenLabs
ELEVENLABS_API_KEY=xxxxxxxxxxxxxxxxxxxx

# Google Cloud TTS (optional)
GOOGLE_TTS_API_KEY=xxxxxxxxxxxxxxxxxxxx

# Azure TTS (optional)
AZURE_TTS_KEY=xxxxxxxxxxxxxxxxxxxx
AZURE_TTS_REGION=eastus

# ===========================================
# PAYMENT (Stripe)
# ===========================================
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx

# ===========================================
# OAUTH PROVIDERS (Optional)
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxx

# GitHub OAuth
GITHUB_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx
GITHUB_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxx

# Apple OAuth
APPLE_CLIENT_ID=com.yourdomain.adele
APPLE_TEAM_ID=xxxxxxxxxxxxxxxxxxxx
APPLE_KEY_ID=xxxxxxxxxxxxxxxxxxxx
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nxxxx\n-----END PRIVATE KEY-----

# Microsoft OAuth
MICROSOFT_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx
MICROSOFT_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxx

# Facebook OAuth
FACEBOOK_APP_ID=xxxxxxxxxxxxxxxxxxxx
FACEBOOK_APP_SECRET=xxxxxxxxxxxxxxxxxxxx

# ===========================================
# EXTERNAL INTEGRATIONS (Optional)
# ===========================================
# GitHub Integration
GITHUB_APP_ID=xxxxxxxxxxxxxxxxxxxx
GITHUB_APP_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nxxxx\n-----END RSA PRIVATE KEY-----

# Slack Integration
SLACK_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx
SLACK_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxx
SLACK_SIGNING_SECRET=xxxxxxxxxxxxxxxxxxxx

# ===========================================
# MONITORING (Optional)
# ===========================================
# Sentry
SENTRY_DSN=https://xxxx@sentry.io/xxxx

# ===========================================
# STORAGE (Optional - for file uploads)
# ===========================================
# AWS S3
AWS_ACCESS_KEY_ID=xxxxxxxxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxx
AWS_REGION=us-east-1
AWS_S3_BUCKET=adele-uploads
