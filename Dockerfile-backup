# ADELE - AI-Powered No-Code Application Builder
# Production Dockerfile for AWS EC2 deployment

# =========================
# Stage 1: Build the frontend
# =========================
FROM node:20-alpine AS frontend-builder

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package manifests first (better caching)
COPY package.json pnpm-lock.yaml* ./

# Install deps (including dev deps needed for build)
RUN pnpm install --frozen-lockfile 2>/dev/null || pnpm install

# Copy source code
COPY . .

# Build frontend
RUN pnpm run build


# =========================
# Stage 2: Production runtime
# =========================
FROM node:20-alpine AS production

WORKDIR /app

# Runtime packages
RUN apk add --no-cache curl openssl postgresql-client

# Install pnpm
RUN npm install -g pnpm

# Copy package manifests (include lockfile if present)
COPY package.json pnpm-lock.yaml* ./

# Install production dependencies ONLY (do NOT run npm install; avoids peer conflicts)
RUN pnpm install --prod --frozen-lockfile 2>/dev/null || pnpm install --prod

# Copy built frontend
COPY --from=frontend-builder /app/dist ./dist

# Copy server files
COPY server ./server

# Copy drizzle schema (if used at runtime)
COPY drizzle ./drizzle

# Create non-root user and fix permissions
RUN addgroup -g 1001 -S nodejs && \
    adduser -S adele -u 1001 -G nodejs && \
    chown -R adele:nodejs /app

USER adele

ENV NODE_ENV=production
ENV PORT=3000

EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -fsS http://localhost:3000/api/health || exit 1

CMD ["node", "server/index.cjs"]

